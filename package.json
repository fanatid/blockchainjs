{
  "name": "blockchainjs",
  "version": "0.5.0",
  "description": "Bitcoin blockchain for wallets.",
  "keywords": [
    "bitcoin",
    "blockchain",
    "verified",
    "mainnet",
    "testnet",
    "testnet3"
  ],
  "bugs": {
    "url": "https://github.com/chromaway/blockchainjs/issues"
  },
  "license": "MIT",
  "author": "Chromaway AB",
  "contributors": [
    {
      "name": "Alex Mizrahi",
      "email": "alex.mizrahi@gmail.com"
    },
    {
      "name": "Kirill Fomichev",
      "email": "fanatid@ya.ru"
    }
  ],
  "files": [
    "docs",
    "lib",
    "src",
    "LICENSE",
    "README.md"
  ],
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chromaway/blockchainjs.git"
  },
  "scripts": {
    "prepublish": "npm run clean && npm run compile",
    "clean": "rm -rf lib/*",
    "compile": "babel -d lib src",
    "compile:watch": "babel -d lib src -w",
    "coverage": "find test/ -type f -name \"*.js\" | xargs istanbul cover _mocha -- --compilers js:babel/register",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info",
    "lint": "standard",
    "test": "npm run test:node && npm run test:browser",
    "test:browser": "karma start karma.conf.js",
    "test:node": "find test/ -type f -name \"*.js\" | xargs istanbul test mocha -- --compilers js:babel/register --reporter spec"
  },
  "dependencies": {
    "babel-runtime": "^5.8.29",
    "bigi": "^1.4.0",
    "bluebird": "^2.9.34",
    "browser-request": "=0.3.3",
    "bs58check": "^1.0.6",
    "core-decorators": "^0.8.1",
    "error-system": "^1.0.0",
    "lodash": "^3.10.1",
    "lru-cache": "^2.6.5",
    "make-concurrent": "^1.1.1",
    "odd-storage": "^0.5.0",
    "pg": "^4.4.3",
    "ready-mixin": "^2.0.0",
    "request": "=2.53.0",
    "socket.io-client": "^1.3.6",
    "sqlite3": "^3.1.0",
    "url-join": "0.0.1",
    "ws": "^0.8.0"
  },
  "devDependencies": {
    "babel": "^5.8.29",
    "babel-core": "^5.8.29",
    "babel-eslint": "^4.1.3",
    "babelify": "^6.4.0",
    "bitcoinjs-lib": "=1.4.3",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "coveralls": "^2.11.3",
    "helloblock-faucet": "^0.0.1",
    "istanbul": "^0.4.0",
    "karma": "^0.13.8",
    "karma-browserify": "^4.3.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-detect-browsers": "^2.0.1",
    "karma-firefox-launcher": "^0.1.6",
    "karma-mocha": "^0.2.0",
    "mocha": "^2.2.5",
    "optimist": "^0.6.1",
    "progress": "^1.1.8",
    "sqlite3": "^3.1.1",
    "standard": "^5.3.1"
  },
  "engines": {
    "node": ">=0.10"
  },
  "browser": {
    "request": "browser-request",
    "./lib/storage/index.js": "./lib/storage/index-browser.js",
    "./src/storage/index.js": "./src/storage/index-browser.js"
  },
  "standard": {
    "globals": [
      "describe",
      "xdescribe",
      "beforeEach",
      "afterEach",
      "it"
    ],
    "parser": "babel-eslint"
  }
}
